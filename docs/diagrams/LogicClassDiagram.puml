@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor LOGIC_COLOR_T4
skinparam classBackgroundColor LOGIC_COLOR

package Logic {

Class SmartNusParser
Class XYZCommand
Class ABCCommand
Class CommandResult
Class "{abstract}\nCommand" as Command
Class QuizInputParser

Interface Logic <<Interface>>
Class LogicManager
}

package Model{
Class HiddenModel #FFFFFF
}

package Storage{
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Logic

LogicManager .right.|> Logic
LogicManager -right->"1" SmartNusParser
SmartNusParser ..> XYZCommand : creates >
LogicManager -right->"1" QuizInputParser
QuizInputParser ..> ABCCommand : creates >

XYZCommand -up-|> Command
ABCCommand -up-|> Command
LogicManager .left.> Command : executes >

LogicManager --> Model
LogicManager --> Storage
Storage --[hidden] Model
Command .[hidden]up.> Storage
Command .right.> Model
note right of XYZCommand: XYZCommand = AddQuestionCommand, \nFindCommand, etc
note bottom of ABCCommand: ABCCommand = AnswerMcqCommand, \nNextQuestionCommand, etc

Logic ..> CommandResult
LogicManager .down.> CommandResult
Command .up.> CommandResult : produces >
@enduml
